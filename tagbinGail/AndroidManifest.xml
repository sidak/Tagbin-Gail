<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sidak.tagbinGail"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.sidak.tagbinGail.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_button"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sidak.tagbinGail.MainActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.SplashScreenActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.IndustryActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.MaterialActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.ConsumptionActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.ProductsActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.CustomListView"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.SummaryActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.PrizeActivity"
            android:label="@string/title_activity_prize" >
        </activity>
    </application>

</manifest>
