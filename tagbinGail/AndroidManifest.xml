<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sidak.tagbinGail"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sidak.tagbinGail.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.IndustryActivity"
            android:label="@string/title_activity_industry"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.MaterialActivity"
            android:label="@string/title_activity_material"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sidak.tagbinGail.ConsumptionActivity"
            android:label="@string/title_activity_consumption"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
