<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wdww"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="3.8"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="right|clip_vertical"
        android:orientation="vertical" >
        <ImageView
			    android:id="@+id/gail_bg_down"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="20dp"
			    android:src="@drawable/we" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/prize_text_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/luck2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prize_label"
            android:textColor="#89AB23"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>



    <RelativeLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.5"
		    android:gravity="center_vertical|left"
	        >

			<ImageView
			    android:id="@+id/gail_bg_down"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true"
			    android:layout_marginLeft="116dp"
			    android:src="@drawable/wew" />
	        
	    </RelativeLayout>

</LinearLayout>